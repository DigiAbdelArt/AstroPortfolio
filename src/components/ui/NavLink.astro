---
import { cn } from "@/lib/utils";

const currentPath = new URL(Astro.request.url).pathname;
const cleanedPath =  (currentPath.endsWith("/") && currentPath.length>1) && currentPath.slice(0,-1) || currentPath
const {href,class:classList} = Astro.props;
const isActive = (cleanedPath === href);

---
<a class={ cn("hover:opacity-90 underline-offset-4",isActive&&"underline font-semibold",classList)} href={href}><slot /></a>